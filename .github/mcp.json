{
  "servers": {
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "%USERPROFILE%"
      ]
    },
    "powershell": {
      "type": "stdio",
      "command": "pwsh.exe",
      "args": [
        "-NoLogo",
        "-NoProfile",
        "-Command",
        "-"
      ],
      "env": {}
    },
    "gcloud": {
      "type": "stdio",
      "command": "gcloud",
      "args": [],
      "env": {}
    },
    "firebase": {
      "type": "stdio",
      "command": "firebase",
      "args": [],
      "env": {}
    },
    "git": {
      "type": "stdio",
      "command": "git.exe",
      "args": [],
      "env": {}
    },
    "dotnet": {
      "type": "stdio",
      "command": "dotnet",
      "args": [],
      "env": {}
    },
    "docker": {
      "type": "stdio",
      "command": "docker",
      "args": [],
      "env": {}
    },
    "github-mcp-server": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github_token}"
      }
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "env": {}
    },
    "mcp-playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@executeautomation/playwright-mcp-server"
      ],
      "env": {}
    }
  },
  "inputs": [
    {
      "id": "github_token",
      "description": "GitHub personal access token",
      "type": "promptString",
      "password": true
    }
  ]
}